#include<stdio.h>
int main()
{
   int a[100],i,j,temp,n;
   printf("Enter size of an array:");
   scanf("%d",&n);
   printf("enter numbers:");
   for(i=0;i<n;i++)
   {
      scanf("%d",&a[i]);
   }
   for(i=0;i<n-1;i++)
   {
      for(j=i+1;j<n;j++)
      {
         if(a[i]>a[j])
         {
            temp=a[i]; 
            a[i]=a[j];
            a[j]=temp;
         }
      }
   }
   printf("Elements are now in ascending order:");
   for(i=0;i<n;i++)
      printf("%d\t",a[i]);
   return 0;
}
