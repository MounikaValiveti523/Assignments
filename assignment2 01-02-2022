/*call by value*/
#include <stdio.h>
void swap (int x,int y);
void main()
{
    int x,y;
    printf("Enter two values:");
    scanf("%d %d",&x,&y);
    printf("Before swap:%d %d\n",x,y);
    swap(x,y);
    printf("After swap:%d %d",x,y);
}
void swap(int a,int b)
{
    int temp;
    temp=a;
    a=b;
    b=temp;
} 

/call by reference/
#include <stdio.h>
void swap (int *,int *);
void main()
{
    int x,y;
    printf("Enter two values:");
    scanf("%d %d",&x,&y);
    printf("Before swap:%d %d\n",x,y);
    swap(&x,&y);
    printf("After swap:%d %d",x,y);
}
void swap(int *a,int *b)
{
    int temp;
    temp=*a;
    *a=*b;
    *b=temp;
}    
